{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "script"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "plugin:github/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "node",
    "import",
    "prettier",
    "jest"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-case-declarations": "off",
    "eqeqeq": "warn",
    "quote-props": [
      "warn",
      "consistent-as-needed"
    ],
    "keyword-spacing": "error",
    "eslint-comments/no-use": "off",
    "import/no-namespace": "off",
    "no-unused-vars": "off",
    "camelcase": "off",
    "semi": "off",
    "no-console": "off",
    "node/no-unsupported-features/node-builtins": "off",
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "version": ">=10.13.0"
      }
    ],
    "node/no-unsupported-features/es-builtins": [
      "error",
      {
        "version": ">=10.13.0"
      }
    ],
    "prettier/prettier": "error"
  }
}
